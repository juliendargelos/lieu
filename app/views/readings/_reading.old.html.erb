<main class="container container--full-screen wrapper wrapper--fill-height wrapper--small-padding wrapper--padding--both">
  <div class="dashboard-index__container">
    <div class="dashboard-index__book">
      <div class="book book--number-of-chapters--<%= reading.book.number_of_chapters %> books__item book--orange dashboard-index__book-item" data-id="<%= reading.book.id %>">
        <%= image_tag reading.book.icon.url, class: :book__icon if reading.book.icon.exists? %>
        <div class="book__content book__content--summarized">
          <h2 class="book__title book__title--vertical dashboard-index__book-title"><%= reading.book.title %></h2>
        </div>
        <div class="book__footer">
          <span class="book__number-of-chapters"><%= reading.book.number_of_chapters %></span>
        </div>
      </div>
      <%= link_to '', reading, class: 'dashboard-index__book-action' %>
    </div>
    <div class="dashboard-index__users">
      <div class=" dashboard-index__user user-profil">
        <h1 class="user-profil__pseudo"><%= reading.user.pseudo %></h1>
        <div class="user-profil__avatar">
          <%= render reading.user.avatar %>
        </div>
        <div class="user-profil__content">
          <%= image_tag("library.svg", :class => "user-profil__library") %>
          <div class="user-profil__separate"></div>
          <div class="user-profil__details">
            <div class="user-profil__detail"><span>01</span> dessins</div>
            <div class="user-profil__detail"><span>15</span> minutes</div>
            <div class="user-profil__detail"><span>08</span> emojis</div>
          </div>
        </div>
      </div>
      <div class="dashboard-index__user user-profil">
        <h1 class="user-profil__pseudo"><%= reading.connected_reading.user if reading.connected? %></h1>
        <div class="user-profil__avatar">
          <%= render reading.connected_reading.user.avatar if reading.connected? %>
        </div>
        <div class="user-profil__content">
          <%= image_tag("library.svg", :class => "user-profil__library") %>
          <div class="user-profil__separate"></div>
          <div class="user-profil__details">
            <div class="user-profil__detail"><span>04</span> dessins</div>
            <div class="user-profil__detail"><span>30</span> minutes</div>
            <div class="user-profil__detail"><span>12</span> emojis</div>
          </div>
        </div>
      </div>
      <div class="dashboard-index__sound">
        <%= image_tag("sound_on.svg", :class => "dashboard-index__sound-on") %>
      </div>
    </div>
  </div>
  <div class="dashboard-index__timeline">
    <%= render 'readings/timeline', reading: reading %>
  </div>
</main>
