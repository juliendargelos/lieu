<div class="homepage">
  <div class="homepage__content">
    <div class="homepage__logo">
      <%= image_tag("logo.svg") %>
    </div>
    <div class="homepage__buttons">
      <div class="homepage__login">
        <button class="homepage__button">
          <%= link_to 'Connexion', new_user_path(), :class => "homepage__button-link" %>
        </button>
      </div>
      <div class="homepage__signin">
        <button class="homepage__button">
          <%= link_to 'Inscription', new_user_path(), :class => "homepage__button-link" %>
        </button>
      </div>
    </div>
  </div>
</div>
