<main class="books-show__wrapper">
  <div class="books-show__content">
    <%= image_tag @book.icon.url, class: 'books-show__icon' if @book.icon.exists? %>
    <h1 class="books-show__title"><%= @book.title %></h1>
    <h2 class="books-show__author"><%= @book.author %></h2>
    <div class="books-show__separator"></div>
    <div class="books-show__chapters"><span class="books-show__chapters__number"><%= @book.number_of_chapters %></span><br>chapitres</div>
  </div>
  <%= link_to '', chapters_path, class: 'next-step' %>
</main>
