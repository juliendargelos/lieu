<%= form_for user, class: :form do |f| %>
  <div class="form__field">
    <%= f.label :pseudo, class: 'form__label form__pseudo' %>
    <%= f.text_field :pseudo, class: :form__input, placeholder: "Pseudo" %>
  </div>

  <div class="form__field">
    <%= f.label :email, class: 'form__label form__email' %>
    <%= f.email_field :email, class: :form__input %>
  </div>

  <div class="form__field">
    <%= f.label :password, class: 'form__label form__password1' %>
    <%= f.password_field :password, class: :form__input %>
  </div>

  <div class="form__field">
    <%= f.label :password_confirmation, class: 'form__label form__password2' %>
    <%= f.password_field :password_confirmation, class: :form__input %>
  </div>

  <div class="form__actions">
    <%= f.submit nil, class: :form__submit %>
  </div>
<% end %>
